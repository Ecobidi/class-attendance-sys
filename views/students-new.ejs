<%-include ("partials/top") %>
<div class="row space">
  <div class="col-12">
    <div class="d-flex justify-content-between align-items-center border-bottom pb-2">
      <h4 class="page-title">New Student</h4>
    </div>
  </div> 
</div>

<div class="row pb-2">
<div class="col-12">

<form action="/students/new" method="POST" class="card">

  <fieldset class="row card-body">
    <legend>Personal Information</legend>
    <div class="form-group col-md-4">
      <label>Surname: <strong class="text-danger">*</strong></label>
      <input required type="text" class="form-control" name="surname" />
    </div>
    <div class="form-group col-md-4">
      <label>First Name: <strong class="text-danger">*</strong></label>
      <input required type="text" class="form-control" name="first_name" />
    </div>
    <div class="form-group col-md-4">
      <label>Middle Name (Optional):</label>
      <input type="text" class="form-control" name="middle_name" />
    </div>
    <div class="form-group col-md-4">
      <label>Gender: <strong class="text-info">*</strong></label>
      <select class="form-control" name="gender" required>
        <option value="">--Select Gender--</option>
        <option value="Female">Female</option>
        <option value="Male">Male</option>
      </select>
    </div>
  </fieldset>


  <fieldset class="row card-body">
    <legend>Academic Information</legend>
    <div class="form-group col-md-4">
      <label>Reg. (Matric.) No.: <strong class="text-info">*</strong></label>
      <input type="text" class="form-control" name="reg_no" required />
    </div>
    <div class="form-group col-md-4">
      <label>Faculty/School: <strong class="text-info">*</strong></label>
      <select required class="form-control" name="school_faculty">
        <option value="">-- Select School / Faculty --</option>
        <option>S.B.M.T</option>
        <option>S.E.T</option>
        <option>S.E.D.T</option>
        <option>S.F.S.T</option>
        <option>S.S.I.T</option>
      </select>  
    </div>
    <div class="form-group col-md-4">
      <label>Department: <strong class="text-info">*</strong></label>
      <select class="form-control" name="department" required>
        <option value="">--Select Department--</option>
        <% departments.forEach(d => { %>
          <option><%= d.name %></option>
        <% }) %>
      </select>
    </div>
    <div class="form-group col-md-4">
      <label>Level: <strong class="text-info">*</strong></label>
      <select required class="form-control" name="level">
        <option value=''>-- Select Level --</option>
        <option>ND 1</option>
        <option>ND 2</option>
        <option>HND 1</option>
        <option>HND 2</option>
      </select>
    </div>
    <div class="form-group col-md-4">
      <label>Session: <strong class="text-info">*</strong></label>
      <select name="session" class="form-control" required>
        <option value="">-- Choose Session --</option>
        <option>2018/2019</option>
        <option>2019/2020</option>
        <option>2020/2021</option>
        <option>2021/2022</option>
      </select>
    </div>
  </fieldset>
  
  <div class="form-group mt-4">
    <button class="btn btn-primary form-control" type="submit">Submit</button>
  </div>
</form>

